{
  "name": "weather-app",
  "version": "1.0.0",
  "main": "src/main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shikharsubedi/weather-app.git"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "watch": "nodemon src/main.ts",
    "lint": "eslint",
    "fix": "eslint --fix",
    "test:coverage": "nyc mocha --require ts-node/register src/**/*.spec.ts",
    "test": "mocha --timeout 30000 --require ts-node/register src/**/*.spec.ts",
    "test:watch": "mocha -r ts-node/register src/**/*.spec.ts --watch --watch-files src/**/*.ts"
  },
  "homepage": "https://github.com/shikharsubedi/weather-app#readme",
  "keywords": [],
  "author": "Shikhar Subedi",
  "license": "MIT",
  "description": "Get current weather using API",
  "dependencies": {
    "axios": "^1.7.7",
    "date-fns": "^2.0.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/chai": "^4.3.19",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.16.5",
    "@types/sinon": "^17.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "chai": "^5.1.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mocha": "^10.5.0",
    "globals": "^15.9.0",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.4",
    "nyc": "^17.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.4.0"
  }
}
